<!-- Flash Message: Success Partial -->
<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-4 offset-4 mt-2 mb-0" role="alert">
        <strong><%= success %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<!-- Flash Message: Failure Partial -->
<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2 mb-0" role="alert">
        <strong><%= error %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>